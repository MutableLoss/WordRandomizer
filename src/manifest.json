{
  "name": "__MSG_extName__",
  "version": "1.0.0",
  "default_locale": "en",
  "description": "Foreign-Language Vocabulary Study Extension",
  "permissions": [
    "background",
    "notifications",
    "storage",
    "idle"
  ],
  "background": {
    "scripts": [
      "localizer.js",
      "utilities.js",
      "wordList.js",
      "preferences.js",
      "background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
   "words.json"
  ],
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    }
  },
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "manifest_version": 2
}