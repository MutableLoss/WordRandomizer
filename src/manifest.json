{
  "name": "Word Randomizer",
  "version": "1.0.0",
  "description": "Random Japanese Word",
  "permissions": [
    "background",
    "notifications",
    "storage"
  ],
  "background": {
    "scripts": [
      "wordList.js",
      "background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": {
    "words.json"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    }
  },
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "manifest_version": 2
}